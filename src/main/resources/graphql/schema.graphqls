"""
This is the main query
"""
type Query {
    pets: [Pet]
}

"""
Declaration of a Pet object
"""
type Pet {
    "all pets must have a name"
    name: String!
    colour: String
    petKind: PetKind
    friend: Pet
    owners: [Person!]
}

enum PetKind {
    CAT
    DOG
    BIRD
}

type Person {
    name: String
    phone: String
}